# TODO
# - cmd line for ignoring choices, or extending it with
#   imagine dist install with local alisp!!!

choices="CHOICES"
libpath=LIBPATH
sharepath=SHAREPATH

# save current arguments
args="$*"
# determine first choice
set -- $choices
engine=$1

# reset arguments
set -- $args

while [ $# -gt 1 ]
do
  key="$1"
  shift
  case $key in
    -e|--engine) engine="$1" ; shift ;;
    -l|--libpath) libpath="$1" ; shift ;;
    --) break ;;
    *) break ;;
  esac
done

# check choice of engine is in list of supported
case " $choices " in
  *" $engine "*) true ;;
  *) echo "Unsupported engine $engine" >&2
     exit 1
     ;;
esac

case "x$engine" in
xacl)
	exec alisp -I $libpath/acl/cafeobj.acl -- -prefix $sharepath $*
	;;
xclisp)
	exec clisp -M $libpath/clisp/cafeobj.mem $*
	;;
xcmu)
	exec lisp -core $libpath/cmu/cafeobj.core $*
	;;
xgcl)
	exec $libpath/gcl/cafeobj.exe $*
	;;
xccl)
	exec ccl $libpath/ccl/cafeobj/img $*
	;;
xccl64)
	exec ccl64 $libpath/ccl64/cafeobj.img $*
	;;
xsbcl)
	exec $libpath/sbcl/cafeobj.sbcl -prefix $sharepath $*
	;;
*)
	echo "CafeOBJ: unknown engine selection $engine" >&2
	exit 1
	;;
esac

