module! STRING-EX {
  protecting(STRING)
  [ FindResult < Nat ]
  op notFound : -> FindResult { constr }
  op find  : String Character -> FindResult
  op rfind : String Character -> FindResult

  eq find(S:String, C:Character) = #!! (string-find S C) .
  eq rfind(S:String, C:Character) = #!! (string-rfind S C) .
}
